module classes/FieldDeclarations
imports
  lexical/Identifiers
  lexical/Modifiers
  types/Main
  interfaces/Annotations
  arrays/ArrayInitializers
  expressions/Main

exports
  sorts
    FieldDec
    VarDec
    VarDecId
    Dim
    VarInit

  context-free syntax
    (Anno)* Type { VarDec ","}+ ";" -> FieldDec {cons("FieldDec")}
	 Type { VarDec ","}+ ";" -> FieldDec {cons("FieldDec")}
    VarDecId             -> VarDec {cons("VarDec")}
    VarDecId "=" VarInit -> VarDec {cons("VarDec")}

    Id      -> VarDecId
    Id Dim+ -> VarDecId {cons("ArrayVarDecId")}

    "[" "]" -> Dim {cons("Dim")}

    Expr      -> VarInit
    ArrayInit -> VarInit

  sorts FieldMod
  context-free syntax
    Public    -> FieldMod
    Private   -> FieldMod
